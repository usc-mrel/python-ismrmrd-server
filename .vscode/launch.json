    "version": "0.2.0",
    "configurations": [

        // Start server
        {
            "name": "Start server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "-p", "9028",
                // "-m",
                // "-v",
                // "-s"
            ],
            "console": "integratedTerminal",
            "consoleTitle": "Server",
            "justMyCode": false,
        },

        // Run client
        {
            "name": "Run client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "args": [
                "${workspaceFolder}/data/shepplogan_raw.mrd",
                "-c", "invertcontrast",
                "-o", "${workspaceFolder}/data/shepplogan_recon.mrd"
            ],
            "console": "integratedTerminal",
            "consoleTitle": "Client",
            "justMyCode": true,
        },

        // Run PT plotter
        {
            "name": "Run PT plotter",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/qtptplotter.py",
            "args": [
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
    ],
    "compounds":
    [
        {
            "name": "Server + client",
            "configurations": ["Start server", "Run client"]
        },
    ]

}
